public class PMSDraftSyncQueueable  implements Queueable{
 private Id serviceContractId;

    public PMSDraftSyncQueueable(Id contractId) {
        this.serviceContractId = contractId;
    }

    public void execute(QueueableContext context) {
        try{ ServiceContract scope = [
            SELECT Id, Status, StartDate,PMS_Tickets_Creation_Date__c, Events_Created__c, Opportunity__r.Opportunity_Start_Date__c, Is_Backdated_Contract__c, Opportunity__c,ActivationDate, EndDate 
            FROM ServiceContract
            WHERE Id = :serviceContractId
            LIMIT 1
        ];

        if (scope.Is_Backdated_Contract__c == false) return;

        List<PMS_Event__c> pmsEvents = [
            SELECT Id, Asset__c, Service_Contract__c, Asset__r.Component_Id__c
            FROM PMS_Event__c
            WHERE Service_Contract__c = :scope.Id
        ];

        List<ContractLineItem> cliList = [
            SELECT Id, AssetId, ServiceContractId,Asset.Component_Id__c, Asset.AccountId
            FROM ContractLineItem
            WHERE ServiceContractId = :scope.Id
            AND AssetId != null
            AND Asset.Component_Id__c != null
        ];

        Map<String, PMS_Event__c> pmsByComponent = new Map<String, PMS_Event__c>();
        for (PMS_Event__c event : pmsEvents) {
            if (event.Asset__r.Component_Id__c != null) {
                System.debug('cmp id'+event.Asset__r.Component_Id__c);
                System.debug('event id'+event);
                pmsByComponent.put(event.Asset__r.Component_Id__c, event);
            }
        }

        Map<String, ContractLineItem> cliByComponent = new Map<String, ContractLineItem>();
        for (ContractLineItem cli : cliList) {
            cliByComponent.put(cli.Asset.Component_Id__c, cli);
        }

        List<PMS_Event__c> toDelete = new List<PMS_Event__c>();
        List<PMS_Event__c> toInsert = new List<PMS_Event__c>();
        List<PMS_Event__c> toUpdate = new List<PMS_Event__c>();

        // Delete PMS events whose components are no longer in CLI
        for (String componentId : pmsByComponent.keySet()) {
            if (!cliByComponent.containsKey(componentId)) {
                toDelete.add(pmsByComponent.get(componentId));
            }
        }

        // Insert or update PMS events based on CLI
        for (String componentId : cliByComponent.keySet()) {
            if (!pmsByComponent.containsKey(componentId)) {
                ContractLineItem cli = cliByComponent.get(componentId);
                PMS_Event__c newEvent = new PMS_Event__c();
                newEvent.Service_Contract__c = scope.Id;
                newEvent.Asset__c = cli.AssetId;
                newEvent.Account__c= cli.Asset.AccountId;
                //newEvent.Asset__r.Component_Id__c = Asset.Component_Id__c;
                newEvent.Start_Date__c = scope.Opportunity__r.Opportunity_Start_Date__c;
                newEvent.PMS_Completion_SLA__c = scope.StartDate != null ? scope.StartDate.addDays(35) : null;
                newEvent.Subject__c = 'Auto-created PMS for Component';
                toInsert.add(newEvent);
            } else {
                PMS_Event__c existing = pmsByComponent.get(componentId);
                ContractLineItem cli = cliByComponent.get(componentId);
                if (existing.Asset__c != cli.AssetId) {
                    existing.Asset__c = cli.AssetId;
                    toUpdate.add(existing);
                }
            }
        }
 System.debug('toDelete'+toDelete);
            System.debug('toUpdate'+toUpdate);
            System.debug('toInsert'+toInsert);
        if (!toDelete.isEmpty()) delete toDelete;
        if (!toInsert.isEmpty()) insert toInsert;
        if (!toUpdate.isEmpty()) update toUpdate;
           }
        catch(Exception e){
            System.debug('cException'+e.getMessage());
            System.debug('cException id'+e.getLineNumber());
        }
    }
