    public void afterUpdate(List<SObject> newList, Map<Id, SObject> newMap,  List<SObject> oldList, Map<Id,SObject> oldMap) {


           // Cast the lists to Opportunity
        List<Opportunity> newOpportunities = (List<Opportunity>)newList;
        Map<Id, Opportunity> oldOpportunities = (Map<Id, Opportunity>)oldMap;

        // Collect account IDs to query
        Set<Id> accountIds = new Set<Id>();
        Set<Id> contactIds = new Set<Id>();
         List<Id> accountIdstoSAP = new List<Id>();
        List<Id> contactIdstoSAP = new List<Id>();

        
        /*
        //Assign default Pricebook to RPC if it is null or blank or RPC
        OpportunityTriggerHelper.updateOpportunityPricebooks(newOpportunities);
        */

        for (Opportunity newOpp : newOpportunities) {
            Opportunity oldOpp = oldOpportunities.get(newOpp.Id);

            // Check if StageName has changed to the target values
            if (
                newOpp.SubStatus__c != oldOpp.SubStatus__c &&
                (newOpp.SubStatus__c == 'Pending approval Commercial â€“ Need info' || 
                 newOpp.SubStatus__c == 'Pending approval Commercial')
            ) {
                if (newOpp.AccountId != null) {
                    accountIds.add(newOpp.AccountId);
                }
                if(newOpp.Contact__c != null){
                    contactIds.add(newOpp.Contact__c);
                }
            }
        }

        if (!accountIds.isEmpty()) {
            // Query accounts to check their SAP Customer ID
            Map<Id, Account> accounts = new Map<Id, Account>([
                SELECT Id, SAP_Customer_ID__c 
                FROM Account 
                WHERE Id IN :accountIds
            ]);

            // Check if SAP_Customer_ID__c is blank
            for (Id accountId : accountIds) {
                Account acc = accounts.get(accountId);
                if (acc != null && String.isBlank(acc.SAP_Customer_ID__c)) {
                    accountIdstoSAP.add(accountId);
                }
            }

            // Call the external method if there are accounts to process
            if (!accountIdstoSAP.isEmpty()) {
                SendCustomerDetails.sendToSAP(accountIdstoSAP, null, null);
            }
        }

        if (!contactIds.isEmpty()) {
            // Query accounts to check their SAP Customer ID
            Map<Id, Contact> contacts = new Map<Id, Contact>([
                SELECT Id, SAP_Contact_Id__c 
                FROM Contact 
                WHERE Id IN :contactIds
            ]);

            // Check if SAP_Customer_ID__c is blank
            for (Id contactId : contactIds) {
                Contact con = contacts.get(contactId);
                if (con != null && String.isBlank(con.SAP_Contact_Id__c)) {
                    contactIdstoSAP.add(contactId);
                }
            }

            // Call the external method if there are accounts to process
            if (!contactIdstoSAP.isEmpty()) {
                SendContactDetails.sendToSAP(contactIdstoSAP, null);
            }
        }


        
    }
   
